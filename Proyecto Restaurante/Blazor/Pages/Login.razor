@page "/login"
@page "/login/{MensajeError}"

<h3>Iniciar Sesión</h3>

@if (MensajeError != null)
{
    <div class="text-danger">@MensajeError</div>
}

<form method="post" action="/autenticar/validar">
    <div class="form-group">
        <label>Usuario:</label> 
        <input type= "text" name= "CodigoUsuario" class="form-control col-sm-6 col-md-4" />
    </div>

    <div class="form-group">
        <label>contraseña:</label>
        <input type="password" name="Contrasena" class="form-control col-sm-6 col-md-4" />
    </div>

    <buttom class="btn btn-primary">Iniciar</buttom>

</form>

@code {
    [Parameter] public string MensajeError { get; set; }
}
