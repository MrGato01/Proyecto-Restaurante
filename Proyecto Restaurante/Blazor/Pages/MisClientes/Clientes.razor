@page "/Clientes"
@using Modelos

<AuthorizeView Roles="Administrador">
	<Authorized Context="AuthenticationState">
		<h2>Lista de Clientes</h2>
		<br />
		<div class="form-group row">
			<div class="col-sm-10">
				<a href="/Clientes/Nuevo" class="btn btn-primary m-1">Nuevo Cliente</a>
			</div>
		</div>

		@if (listaClientes == null)
		{
			<p>No existen productos en la base de datos</p>
		}
		else
		{
			<table class="table">
				<thead>
					<tr>
						<th>identidad</th>
						<th>Nombre</th>
						
					</tr>
				</thead>
				<tbody>
					@foreach (Cliente prod in listaClientes)
					{
						<tr>
							<th>@prod.Identidad</th>
							<th>@prod.Nombre</th>
							
							<th><a class="btn btn-success" href="@($"/Cliente/Editar/{prod.Identidad}")">Editar</a></th>
						</tr>

					}
				</tbody>
			</table>
		}

	</Authorized>
</AuthorizeView>
