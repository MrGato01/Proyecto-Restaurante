
@page "/Cliente/Editar/{identidadCliente}"

<AuthorizeView Roles="Administrador">
    <Authorized Context="AuthenticationState">

        <h2>Editar Cliente</h2>
        <br />

        <EditForm Model="@clien">
            <DataAnnotationsValidator />

            <div class=" form-group row">
                <label for="identidadCliente" class="col-sm-2 col-form-label">
                    identidadCliente
                </label>
                <div class="col-sm-10">
                    <label for="identidadCliente" class="col-sm-2 col-form-label">
                        @clien.identidadCliente
                    </label>
                </div>
            </div>

            <div class=" form-group row">
                <label for="Nombre" class="col-sm-2 col-form-label">
                    Nombre
                </label>
                <div class="col-sm-10">
                    <InputText id="Nombre" class="form-control" @bind-Value="clien.Nombre" />

                    <ValidationMessage For="@(() => clien.Nombre)" />
                </div>
            </div>         

            <div class=" form-group row">
                <p>
                    <input type="submit" class="btn btn-primary" value="Guardar" @onclick="Guardar" />
                    <input type="submit" class="btn btn-danger" value="Cancelar" @onclick="Cancelar" />
                    <input type="submit" class="btn btn-warning" value="Eliminar" @onclick="Eliminar" />
                </p>
            </div>

           

        </EditForm>
    </Authorized>
</AuthorizeView>